<Application
    x:Class="LUMO.Messenger.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LUMO.Messenger.UWP">
    <Application.Resources>
        <Color x:Key="PrimaryTextColor">#49454A</Color>
        <Color x:Key="SecondaryTextColor">#FF484848</Color>
        <Color x:Key="PrimaryBackgroundColor">#FFF7F0F0</Color>
        <Color x:Key="SecondaryBackgroundColor">#FDFCFC</Color>
        <Color x:Key="PrimaryButtonColor">#FF7EB9B1</Color>
        <Color x:Key="PrimaryButtonHoverColor">#A2CDC7</Color>
        <Color x:Key="PrimaryButtonActiveColor">#BDDBD7</Color>
        <Color x:Key="SecondaryButtonColor">Transparent</Color>
        <Color x:Key="SecondaryButtonHoverColor">#F1E4E4</Color>
        <Color x:Key="SecondaryButtonActiveColor">#E3C9C9</Color>
        <Color x:Key="OnlineStatusColor">#22BDA5</Color>
        <Color x:Key="OfflineStatusColor">#DE2846</Color>
        <Color x:Key="UnknownStatusColor">#675656</Color>
    </Application.Resources>

</Application>
